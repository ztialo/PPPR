<?xml version="1.0"?>
<robot name="test_robot">

  <!-- Base Link -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.19 0.20 0.06"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0.045"/>
      <material name="red">
        <color rgba="1 0 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.19 0.20 0.06"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0.045"/>
    </collision>
    <inertial>
      <mass value="6.0"/> <!-- 6 kg mass-->
      <inertia ixx="0.1" iyy="0.1" izz="0.1" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>
  
  <!-- Left Wheel -->
  <link name="lwheel">
  <contact>
      <lateral_friction value="2"/>
  </contact>
    <visual>
      <geometry>
        <mesh filename="stl/pololu-wheel-80x10mm-black.stl" scale="0.001 0.001 0.001"/> 
      </geometry>
      <origin rpy="0 -1.5708 0" xyz="0 0 0"/>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <mesh filename="stl/pololu-wheel-80x10mm-black.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <origin rpy="0 -1.5708 0" xyz="0 0 0"/>
    </collision>
    <inertial>
      <mass value="3"/>
      <inertia ixx="0.001" iyy="0.001" izz="0.001" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>
  
<joint name="base_to_lwheel" type="continuous"> <!-- or revolute -->
  <parent link="base_link"/>
  <child link="lwheel"/>
  <origin xyz="-0.05 0.115 0.046" rpy="-1.5708 0 0"/>
  <axis xyz="0 0 1"/> <!-- Rotating around z-axis -->
  <limit effort="1" velocity="1000"/>
</joint>
  
  <!-- Right Wheel -->
  <link name="rwheel">
  <contact>
      <lateral_friction value="2"/>
  </contact>
    <visual>
      <geometry>
        <mesh filename="stl/pololu-wheel-80x10mm-black.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <origin rpy="0 1.5708 0" xyz="0 0 0"/>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <mesh filename="stl/pololu-wheel-80x10mm-black.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <origin rpy="0 1.5708 0" xyz="0 0 0"/>
    </collision>
    <inertial>
      <mass value="3"/>
      <inertia ixx="0.001" iyy="0.001" izz="0.001" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>
  
<joint name="base_to_rwheel" type="continuous"> <!-- or revolute -->
  <parent link="base_link"/>
  <child link="rwheel"/>
  <origin xyz="-0.05 -0.115 0.046" rpy="-1.5708 0 0"/>
  <axis xyz="0 0 1"/> <!-- Rotating around z-axis -->
  <limit effort="1" velocity="1000"/>
</joint>
  
<!-- caster wheel -->
<link name="caster_wheel">
  <contact>
      <lateral_friction value="0.5"/>
  </contact>
  <visual>
    <geometry>
      <cylinder length="0.01" radius="0.009525"/> <!-- 0.01905 m diameter -->
    </geometry>
    <origin rpy="1.5708 0 0" xyz="-0.02 0 0"/>
    <material name="black">
      <color rgba="0 0 0 1"/>
    </material>
  </visual>
  <collision>
    <geometry>
      <cylinder length="0.01" radius="0.009525"/>
    </geometry>
    <origin rpy="1.5708 0 0" xyz="0 0 0"/>
  </collision>
  <inertial>
    <mass value="5"/>
    <inertia ixx="0.0001" iyy="0.0001" izz="0.0001" ixy="0" ixz="0" iyz="0"/>
  </inertial>
</link>

<!-- caster mount -->
<link name="caster_mount">
  <visual>
    <geometry>
      <sphere radius="0.001"/> <!-- Tiny dummy -->
    </geometry>
  </visual>
  <collision>
    <geometry>
      <sphere radius="0.001"/>
    </geometry>
  </collision>
  <inertial>
    <mass value="5"/>
    <inertia ixx="0.00001" iyy="0.00001" izz="0.00001" ixy="0" ixz="0" iyz="0"/>
  </inertial>
</link>

<joint name="base_to_caster_mount" type="continuous">
  <parent link="base_link"/>
  <child link="caster_mount"/>
  <origin xyz="0.1 0 0.015" rpy="0 0 0"/> <!-- Place under front -->
  <axis xyz="0 0 1"/> <!-- Swivels around Z-axis -->
</joint>

<joint name="caster_mount_to_wheel" type="continuous">
  <parent link="caster_mount"/>
  <child link="caster_wheel"/>
  <origin xyz="0 0 0" rpy="0 0 0"/>
  <axis xyz="0 1 0"/> <!-- Rolls forward/backward -->
</joint>


  
  <!-- Scanner -->
  <link name="scanner">
    <visual>
      <geometry>
        <box size="0.015 0.045 0.015"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0.18 0 -0.05"/>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.015 0.045 0.015"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0.18 0 -0.05"/>
    </collision>
    <inertial>
      <mass value="5"/>
      <inertia ixx="0.0001" iyy="0.0001" izz="0.0001" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>
  
  <joint name="base_to_scanner" type="fixed">
    <parent link="base_link"/>
    <child link="scanner"/>
    <origin xyz="-0.105 0 0.13" rpy="0 0 0"/>
  </joint>

</robot>
